<config
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd"
>

    <!-- kodeverk -->
    <cache alias="kodeverk" uses-template="daily">
        <heap>100</heap>
    </cache>


    <!-- templates -->
    <cache-template name="minute">
        <expiry>
            <ttl unit="seconds">60</ttl>
        </expiry>
    </cache-template>
    <cache-template name="hourly">
        <expiry>
            <ttl unit="minutes">60</ttl>
        </expiry>
    </cache-template>
    <cache-template name="daily">
        <expiry>
            <ttl unit="hours">24</ttl>
        </expiry>
    </cache-template>
</config>